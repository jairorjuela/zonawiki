<!-- Cuerpo de la Tabla donde se renderizan las tareas  -->
<tr id="task_<%= task.id %>" class="<%= task.done %>">
  <td><%= task.name %></td>
  <td><%= task.priority %></td>


  <td>
    <%= link_to '<h5><i class="fas fa-pen-square"></i>  Editar</h5>'.html_safe, edit_task_path(task), remote: true, :class => 'btn btn-sm btn-info' %>
    <%= link_to '<h5><i class="fas fa-clipboard-check"></i>  Tarea Hecha</h5>'.html_safe, task_set_done_path(task), remote: true, :class => 'btn btn-sm btn-success', :id => 'task-id' %>
    <%= link_to '<h5><i class="fas fa-trash-alt"></i>  Eliminar</h5>'.html_safe, task, remote: true, :method => :delete, data: {confirm: "Â¿Confirmas eliminar la tarea: #{task.name} ?"}, :class => 'btn btn-sm btn-danger' %>
  </td>
</tr>
