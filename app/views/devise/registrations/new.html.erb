<div class="container">
  <div class="row justify-content-md-center">

    <div class="col-4">
      <h1>Crear Cuenta</h1>
      <br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email, ('<h5><i class="fas fa-at"></i>  Ingresa tu E-mail</h5>'.html_safe)%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control input-lg", placeholder: "Email", placeholder: "Correo electrónico" %>
        </div>

        <div class="form-group">
          <%= f.label :password, ( '<h5><i class="fas fa-at"></i>  Ingresa una contraseña</h5>'.html_safe) %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control input-lg", placeholder: "Contraseña", placeholder: "Contraseña" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, ( '<h5><i class="fas fa-at"></i>  Confirma tu password</h5>'.html_safe) %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control input-lg", placeholder: "Contraseña", placeholder: "Confirma contraseña" %>
        </div>

        <div class="actions">
          <br>
          <%= f.submit "Crear cuenta", class: "btn btn-outline-info btn-block btn-lg" %>
        </div>
      <% end %>

      <br>
      <span>
        <%= link_to "Ya tienes cuenta?", new_user_session_path, class: "btn btn-sm", id: "nuevo" %>
      </span>
    </div>

    <div class="col-8 py-5 px-lg-5">
      <blockquote class="blockquote text-center">
        <br>
        <br>
        <h1>
          TO-DO list, la App que lleva un registro de tus tareas pendientes.
        </h1>
      </blockquote>
    </div>

  </div>
</div>
